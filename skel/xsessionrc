{ echo "XIDeviceEnabled XISlaveKeyboard"; inputplug -d -c /bin/echo; } |
while read event
do
        case $event in
        XIDeviceEnabled*XISlaveKeyboard*)
                xset r rate 200 30
                setxkbmap -option caps:escape
                ;;
        esac
done &

# Used for vim-slime
screen -ls vim > /dev/null || screen -dm -S vim

