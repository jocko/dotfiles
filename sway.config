# Read `man 5 sway` for a complete reference.

set $mod Mod4

workspace_layout stacking

focus_follows_mouse no

focus_on_window_activation none

exec --no-startup-id nm-applet

bindsym $mod+Return exec ~/.dotfiles/scripts/sensible-terminal

bindsym $mod+Shift+q kill

bindsym $mod+d exec wmenu-run

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+s layout stacking

bindsym $mod+f fullscreen toggle

bindsym $mod+Shift+t floating toggle

bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2

# reload i3 config
bindsym $mod+Shift+c reload

set $exit_mode [s]hutdown, [l]ogout, [r]estart
mode "$exit_mode" {
  bindsym l exec i3-msg exit
  bindsym s exec systemctl poweroff
  bindsym r restart
  bindsym Escape mode "default"
}
bindsym $mod+Shift+e mode "$exit_mode"

bar {
    position bottom

    # When the status_command prints a new line to stdout, swaybar updates.
    # The default just shows the current date and time.
    # status_command while date +'%Y-%m-%d %H:%M'; do sleep 1; done
    status_command i3blocks

    # colors {
    #     statusline #ffffff
    #     background #323232
    #     inactive_workspace #32323200 #32323200 #5c5c5c
    # }
}

